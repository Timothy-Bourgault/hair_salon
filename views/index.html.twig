<!DOCTYPE html>
<html>
    <head>
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="/css/styles.css" rel="stylesheet" type="text/css">
        <script src="/js/jquery-3.1.0.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <title>Salon</title>
    </head>
    <body>
      <div class="container">
        <h1>Sally's Super Salon</h1>
        <div class="row">
          <div class="col-sm-6">
            <h2>List of Current Stylists:</h2>
            <ul>
              {% for stylist in stylists %}
                <li><a href="/stylist/{{stylist.getId}}">{{ stylist.getName }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class="col-sm-6">
            <h2>Add a New Stylist to your Roster Here:</h2>
            <form action="/add_stylist" method="post">
              <label for="stylist_name">Name</label>
              <input id="stylist_name" type="text" name="name">
              <br>
              <br>
              <label for="stylist_scheduled_days">Scheduled Days</label>
              <input id="stylist_scheduled_days" type="text" name="scheduled_days">
              <br>
              <br>
              <label for="stylist_specialties">Specialties</label>
              <input id="stylist_specialties" type="text" name="specialties">
              <br>
              <br>
              <button class="btn-success btn-md" type="submit">Add Stylist</button>
            </form>
          </div>
        </div>
      </div>
    </body>
</html>
